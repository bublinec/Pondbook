<%- include("partials/header") %> 

<div class="container">
    <h1><%= pond.name %></h1>
    <img src="<%= pond.image %> " alt="<%= pond.name %>">
    <p><%= pond.description %> </p>
    <% pond.comments.forEach(function(comment){ %>
        <p>
            <strong><%= comment.author %> </strong>
            - <%= comment.text %> 
        </p>

    <% }) %>
</div>

